@model web_joliebakery.Models.cart
@{
    ViewBag.Title = "Cart";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<style>
    div.container-fluid {
        font-family: "Crimson Text", serif;
    }
    hr.custom-hr {
        margin: 20px 0;
    }

    .table-bordered {
        border: 1px solid #333;
    }

        .table-bordered th,
        .table-bordered td {
            border: 1px solid #333 !important;
        }

    .panel-heading h2,
    .table th,
    .table td {
        color: #000;
    }
</style>
<div class="container-fluid" style="padding-bottom:26px;">
    <div class="row">
        <div class="col-md-12">
            <div class="panel-group">
                <div class="panel panel-danger">
                    <div class="panel-heading">
                        <h2 style="margin-top:26px">SHOPPING CART</h2>
                    </div>
                    <div class="panel-body">
                        <table class="table table-bordered">
                            <tr class="text-center">
                                <th>CODE OF PRODUCT</th>
                                <th>NAME OF PRODUCT</th>
                                <th>PRODUCT</th>
                                <th>UNIT</th>
                                <th>PRICE</th>
                                <th>TOTAL</th>
                                <th>DELETE</th>
                            </tr>
                            @foreach (var item in Model.SP)
                            {
                                <tr class="text-center">
                                    <td>@item.MASP</td>
                                    <td>@item.TENSP</td>
                                    <td style="width: 20%">
                                        <img class="card-img-top img-responsive"
                                             src="@item.HINH" alt="..." />
                                    </td>
                                    <td>
                                        @item.SO_LUONG
                                    </td>
                                    <td>
                                        @item.GIATIEN.ToString("N0") VNĐ
                                    </td>
                                    <td>
                                        @item.THANHTIEN.ToString("N0") VNĐ
                                    </td>
                                    <td>
                                        <div class="d-flex justify-content-center" style="font-size:20px">
                                            <a href="@Url.Action("Delete_Cart","Home", new {id=item.ID})"
                                               onclick="return confirm('You wanna delete this product?');">
                                                <i class="bi bi-x-circle-fill"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                                <tr>
                                    <td colspan="5">
                                        <h3><strong><i>TOTAL:</i></strong></h3>
                                    </td>
                                    <td>
                                        <h4 class="text-center"><strong><i>@Model.TONGTIEN.ToString("N0") VNĐ</i></strong></h4>
                                    </td>
                                </tr>
                            </table>
                    </div>
                    <div class="panel-body">
                        <a href="@Url.Action("Shop", "Home")" role="button">
                            <button class="btn btn-outline-info">BACK TO SHOP</button>
                        </a>
                        <a href="@Url.Action("Pay_Product","Home")" role="button">
                            <button class="btn btn-outline-danger">PAYMENTS</button>
                        </a>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
