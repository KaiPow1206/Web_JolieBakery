@model web_joliebakery.Models.Order

@{
    ViewBag.Title = "Custom";
}

<link href="~/Content/CSS/allcustom.css" rel="stylesheet" />

<div class="container-fluid" style="padding-bottom:26px">
    <div class="row">
        <div class="col-sm-12" style="margin-top:26px">
            <h4>Welcome to the page to customize your cake</h4>
            @if (ViewBag.Message != null)
            {
                <div class="alert alert-success mt-3 text-center" id="message">
                    @ViewBag.Message
                </div>
            }
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3"></div>
        <div class="col-sm-6 mt-3 justify-content-center">
            @using (Html.BeginForm("Custom", "Home", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="form-group mb-3">
                    Do You Want The Cake For ..??
                    @Html.DropDownListFor(model => model.Loai, new SelectList(new List<string> {"BirthDay", "Event", "Anniversary"}), new { @class = "form-control", required = "required" })
                </div>
                <div class="form-group mb-3">
                    Name of person order
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = "Name...", required = "required" })
                </div>
                <div class="form-group mb-3">
                    Phone Number of person order
                    @Html.TextBoxFor(model => model.PhoneNumber, new { @class = "form-control", placeholder = "Phone Number...", required = "required" })
                </div>
                <div class="form-group mb-3">
                    Gmail of person order
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "Gmail...", required = "required" })
                </div>
                <div class="form-group mb-3">
                    Name Of Cake
                    @Html.TextBoxFor(model => model.CakeName, new { @class = "form-control", placeholder = "Cake Name...", required = "required" })
                </div>
                <div class="form-group mb-3">
                    Day Anniversary Of Cake
                    @Html.TextBoxFor(model => model.Birthday, new { @class = "form-control", type = "date", required = "required" })
                </div>
                <div class="form-group mb-3">
                    Message For Cake
                    @Html.TextBoxFor(model => model.MessageCake, new { @class = "form-control", placeholder = "Message...", required = "required" })
                </div>
                <div class="form-group mb-3">
                    Type Of Cake
                    @Html.DropDownListFor(model => model.CakeType, new SelectList(new List<string> { "Original", "Gato Cake", "Cheese Cake", "Mouse Cake", "Tiramisu Cake" }), new { @class = "form-control" })
                </div>
                <div class="form-group mb-3">
                    Taste Of Cake
                    @Html.DropDownListFor(model => model.CakeTaste, new SelectList(new List<string> { "Original", "Vani", "Chocolate", "Matcha", "Cheese", "Another" }), new { @class = "form-control" })
                </div>
                <div class="form-group mb-3">
                    Another Taste
                    @Html.TextBoxFor(model => model.AnotherTaste, new { @class = "form-control", placeholder = "Another Taste..." })
                </div>
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-sm-12 d-flex justify-content-center">
                            <button type="submit" class="btn_1">Submit</button>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="col-sm-3"></div>
    </div>
</div>

<script>
    setTimeout(function () {
        document.getElementById('message').style.display = 'none';
        window.location.href = '/Home/Custom';
    }, 2000);
</script>
