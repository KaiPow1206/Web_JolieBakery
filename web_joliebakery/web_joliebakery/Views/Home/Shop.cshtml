                    <label for="defaultCheck">Tiramisu</label>
                    <hr>
                </li>
            </ul>
            <button type="submit" class="btn btn-success">Sreach Result</button>
            <hr class="d-sm-none">
        </div>

        <div class="col-sm-10">
            <h4 style="text-align: center;margin-top: 26px;"><i>Product</i></h4>
            <div class="card-deck mt-5">
                @foreach (var item in Model.Take(4))
                {
                    <div class="card">
                        <img id="pic" class="card-img-top" src="@item.HINH_DAI_DIEN" alt="Cake image">
                        <div class="card-body">
                            <h4 class="card-title"><i>@item.TENSP</i></h4>
                            <p class="card-text"><small>@item.NOIDUNG</small></p>
                            <p class="card-text"><small><strong>Price for cake: @item.GIATIEN.ToString("N0") VNĐ</strong></small></p>
                            <p class="card-text"><small class="text-muted">Last updated at @item.THOIGIAN</small></p>
                        </div>
                        <div class="card-footer border-0 bg-light">
                            <a href="@Url.Action("Shop_details", "Home",new {id=item.IDSP})" class="btn btn-outline-warning">More</a>
                            <a onclick="AddToCarts('@item.IDSP')">
                                <button class="btn btn-outline-info">
                                    Add To Cart
                                </button>
                            </a>
                        </div>
                    </div>
                }
            </div>
