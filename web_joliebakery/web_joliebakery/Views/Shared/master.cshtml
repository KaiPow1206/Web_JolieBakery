
@{
    ViewBag.Title = "master";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Jolie bakery</title>
    @Styles.Render("~/Content/CSS/master.css")
    <link rel="icon" href="~/Content/img/iconweb.png">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@400..700&family=Great+Vibes&display=swap"
          rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.7.1.js" integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4=" crossorigin="anonymous"></script>
    <script type="text/javascript">
                function AddToCarts(id) {
                    $.post("/Home/AddToCarts", { "id": id },
                        function (data) {
                            if (data.Code == '0') {
                                alert("Thêm sản phẩm vào giỏ hàng thành công, giỏ hàng đã có: " + data.CountMATHANG);
                                document.getElementById("UNIT").innerText = data.CountMATHANG;
                                localStorage.setItem("CountMATHANG", data.CountMATHANG);
                            }
                        });
                }
    </script>
</head>

    <body>
        <div class="header">
            <div class="jumbotron text-center mb-0 pb-2 pt-2">
                <div class="container-fluid">
                    <div class="row align-items-center">
                        <div class="col-3">
                            <img src="~/Content/img/jolie-bakery-high-resolution-logo-transparent.png">
                        </div>
                        <div class="col-6 namebrand">
                            <h2 class="mb-0">Jolie bakery</h2>
                            <p class="mb-0">The small world revolves around sweet cakes</p>
                        </div>
                        <div class="col-3">
                            <img src="~/Content/img/jolie-bakery-high-resolution-logo-transparent.png">
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <nav class="navbar navbar-expand-lg">
            <button class="navbar-toggler navbar-light" type="button" data-toggle="collapse"
                    data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-center" id="navbarSupportedContent">
                <ul class="navbar-nav ">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Shop","Home")">Shop</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("About","Home")">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Custom","Home")">Custom</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Bills","Home")">Tracking</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Cart","Home")">
                            Cart
                            <sup>
                                <span class="badge badge-cart-count" style="font-size:10px">
                                    <label id="SOLUONGMATHANG">
                                        @Session["UNIT"]
                                    </label>
                                </span>
                            </sup>
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <button type="button" class="btn btn-light btn-floating btn-lg" id="btn-back-to-top">
            <i id="colorbtn" class="fas fa-arrow-up"></i>
        </button>

        <div class="content">
            @RenderBody()
        </div>
        <div class="Footer">
            <div class="jumbotron text-center justify-content-center" style="margin-bottom:0px;">
                <p>
                    Thank you for visiting our website. If there are any errors, please contact the above address for the
                    best and fastest support:
                </p>
                <a href="mailto:Jolliebarkery@gmail.com" class="email-link">💌 Jolliebarkery@gmail.com 💌</a>
            </div>
        </div>
        @Scripts.Render("~/Scripts/master.js")

    </body>

</html>