@model IEnumerable<web_joliebakery.Models.Order>

@{
    ViewBag.Title = "Custom_Order";
    Layout = "~/Views/Shared/master_admin.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<style>
    div.container-fluid {
        font-family: "Crimson Text", serif;
    }

    hr.custom-hr {
        margin: 20px 0;
    }

    .table-bordered {
        border: 1px solid #333;
    }

        .table-bordered th,
        .table-bordered td {
            border: 1px solid #333 !important;
        }

    .panel-heading h2,
    .table th,
    .table td {
        color: #000;
    }
</style>
<div class="container-fluid" style="padding-bottom:26px;">
    <div class="row">
        <div class="col-md-12">
            <div class="panel-group">
                <div class="panel panel-danger">
                    <div class="panel-heading">
                        <h2 style="margin-top:26px">CUSTOM ODERS</h2>
                    </div>
                    <div class="panel-body">
                        <table class="table table-bordered">
                            <tr class="text-center">
                                <th>CAKE</th>
                                <th>NAME OF CUSTOMER</th>
                                <th>PHONE OF CUSTOMER</th>
                                <th>EMAIL OF CUSTOMER</th>
                                <th>NAME OF CAKE</th>
                                <th>DAY OF CAKE</th>
                                <th>MESSAGE OF CAKE</th>
                                <th>TYPE OF CAKE</th>
                                <th>TASTE OF CAKE</th>
                                <th>ANOTHER TASTE</th>
                            </tr>
                            @foreach (var item in Model)
                            {
                                <tr class="text-center">
                                    <td>@item.Loai</td>
                                    <td>@item.Name</td>
                                    <td>
                                        @item.PhoneNumber
                                    </td>
                                    <td>
                                        @item.Email
                                    </td>
                                    <td>
                                        @item.CakeName
                                    </td>
                                    <td>
                                        @item.Birthday.ToString("dd/MM/yyyy")
                                    </td>
                                    <td>
                                        @item.MessageCake
                                    </td>
                                    <td>
                                        @item.CakeType
                                    </td>
                                    <td>
                                        @item.CakeTaste
                                    </td>
                                    <td>
                                        @item.AnotherTaste
                                    </td>
                                </tr>
                            }
                        </table>
                    </div>
                    <div class="panel-body">
                        <a href="@Url.Action("Admin", "Manage")" role="button">
                            <button class="btn btn-outline-info">BACK</button>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

